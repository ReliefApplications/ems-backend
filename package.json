    "node-fetch": "^3.3.1",
    "nodemailer": "^6.9.1",
    "passport": "^0.6.0",
    "passport-azure-ad": "^4.3.5",
    "passport-keycloak-bearer": "^2.3.0",
    "pug": "^3.0.2",
    "sanitize-filename": "^1.6.3",
    "survey-knockout": "^1.9.86",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
