{
  "name": "oort-backend",
  "version": "2.1.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_PATH=./build node build/src/index.js",
    "build": "tsc -p tsconfig.json && tsconfig-replace-paths -p tsconfig.json",
    "dev": "nodemon -r tsconfig-paths/register -r dotenv/config src/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest --forceExit",
    "prepare": "husky install",
    "check-i18n": "node .scripts/check-i18n",
    "migrate": "migrate --migrations-dir=\"./migrations\" --compiler=\"ts:./src/utils/migrations/ts-compiler.js\"",
    "migrate:create": "migrate create --template-file ./src/utils/migrations/template.ts --migrations-dir=\"./migrations\" --compiler=\"ts:./src/utils/migrations/ts-compiler.js\"",
    "migrate:up": "migrate --migrations-dir=\"./migrations\" --compiler=\"ts:./src/utils/migrations/ts-compiler.js\" up",
    "migrate:down": "migrate --migrations-dir=\"./migrations\" --compiler=\"ts:./src/utils/migrations/ts-compiler.js\" down",
    "migrate:list": "migrate --migrations-dir=\"./migrations\" --compiler=\"ts:./src/utils/migrations/ts-compiler.js\" list",
    "semantic-release": "semantic-release"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "src/**/*.graphql"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "execMap": {
      "ts": "node --inspect=0.0.0.0:9229 --nolazy -r ts-node/register"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "4.7.1",
    "@apollo/datasource-rest": "^6.0.0",
    "@apollo/utils.fetcher":"^3.0.0",
    "apollo-datasource-rest": "^3.5.2",
    "apollo-server-caching": "^3.3.0",
    "apollo-server-core": "^2.25.2",
    "apollo-server-express": "^2.19.0",
    "@azure/storage-blob": "^12.14.0",
    "@casl/ability": "^6.3.2",
    "@casl/mongoose": "^7.1.3",
    "@ucast/mongo2js": "^1.3.4",
    "@es-joy/jsdoccomment": "^0.38.0",
    "amqplib": "^0.10.3",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "bson": "^5.2.0",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "cron-validator": "^1.3.1",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "email-templates": "^11.0.3",
    "events": "^3.3.0",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "express-winston": "^4.2.0",
    "graphql": "^16.6.0",
    "graphql-amqp-subscriptions": "^1.2.1",
    "graphql-subscriptions": "^2.0.0",
    "graphql-type-json": "^0.3.2",
    "graphql-upload": "^16.0.2",
    "http": "0.0.1-security",
    "i18next": "^22.4.15",
    "i18next-http-middleware": "^3.2.0",
    "i18next-fs-backend": "^2.1.1",
    "inflection": "^2.0.1",
    "json2csv": "^6.0.0-alpha.2",
