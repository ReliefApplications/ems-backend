doctype html
html
  head
    block head
      meta(charset="utf-8")
      meta(name="viewport", content="width=device-width")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="x-apple-disable-message-reformatting")
      link(rel="stylesheet", href="style.css", data-inline)
  body
    div.frame.large
      div.center: img.head(src="https://doc.oortcloud.tech/img/logo.png" alt="Oort - Data management system")

      h3.head
        | #{t('createAccountToApp.sharedBy', { senderName: senderName })}
        span.oort-color #{appName} 
        | #{t('createAccountToApp.sharedApp')}

      p #{t('createAccountToApp.accessInfo')}
      ol 
        li: span
          | #{t('createAccountToApp.goTo')}
          a(href=platformUrl) here
          |  #{t('createAccountToApp.clickOn')}
        li: span #{t('createAccountToApp.validateEmail')}
        li: span #{t('createAccountToApp.openApplication')}
  
      p.center: a.button(href=url target="_blank") #{t('createAccountToApp.accessButton')}

      p
        strong #{t('createAccountToApp.noteTitle')}
        | #{t('createAccountToApp.noteContent')}
      p
        | #{t('createAccountToApp.accessDirectly')}
        a(href=url) #{url}
        | .

      p.footer.center
